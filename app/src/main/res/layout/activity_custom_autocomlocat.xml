<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.helper.CustomAutocomlocat">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#003399"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:background="#003399"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center|left"
                    app:srcCompat="@drawable/ic_arrow_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />

                <AutoCompleteTextView
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:drawablePadding="10dp"
                    android:hint="Search for your locality"
                    android:layout_height="45dp"
                    android:id="@+id/autocomplete"
                    android:background="@null" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#f2f2f2"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center|left"
                app:srcCompat="@drawable/ic_loaction_icon"
                android:layout_width="20dp"
                android:layout_height="30dp" />

                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="  I want my services at current location"
                    android:layout_height="wrap_content"
                    android:textColor="#003399"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:id="@+id/tvcurrentloc" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center|right"
                app:srcCompat="@drawable/ic_right_arrow"
                android:layout_width="20dp"
                android:layout_height="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pbgoogle"
                android:layout_width="100dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_powered_by_google"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>