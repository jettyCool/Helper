<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#003399"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/title"
            android:layout_width="140dp"
            android:layout_height="@dimen/textv_title_height"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Vendor Login"
            android:textColor="#ffffff" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagevendorlogin"
            android:layout_width="@dimen/logo_image_width"
            android:layout_height="@dimen/logo_image_height"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_logo" />

        <TextView
            android:id="@+id/vendordesc"
            android:layout_width="@dimen/textv_desc_width"
            android:layout_height="@dimen/textv_desc_height"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Please Provide Your Details to Register as Vendor"
            android:textSize="@dimen/textv_desc_textsize" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/name"
                android:layout_width="@dimen/textv_name_width"
                android:layout_height="@dimen/textv_name_height"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:layout_marginTop="60dp"
                android:hint="Enter Full Name"
                android:textSize="21sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/mobileno"
                android:layout_width="@dimen/textv_mobileno_width"
                android:layout_height="@dimen/textv_mobileno_height"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:layout_marginTop="20dp"
                android:hint="Enter Mobile No"
                android:textSize="21sp" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/conti"
            android:layout_width="@dimen/textv_conti_width"
            android:layout_height="@dimen/textv_conti_height"
            android:layout_marginTop="30dp"
            android:background="#003399"
            android:gravity="center"
            android:text="CONTINUE"
            android:textColor="#ffffff"
            android:textSize="21sp" />

    </LinearLayout>

</LinearLayout>